{
  "family": "my-task-definition",
  "taskRoleArn": "arn:aws:iam::456325780689:role/my-task-role",
  "executionRoleArn": "arn:aws:iam::456325780689:role/my-execution-role",
  "networkMode": "awsvpc",
  "requiresCompatibilities": [
    "FARGATE"
  ],
  "cpu": "256",
  "memory": "512",
  "containerDefinitions": [
    {
      "name": "ecs-cl-1",
      "image": "nginx:latest",
      "portMappings": [
        {
          "containerPort": 80,
          "protocol": "tcp"
        }
      ],
      "essential": true,
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-group": "/ecs/my-task-definition",
          "awslogs-region": "us-west-2",
          "awslogs-stream-prefix": "ecs-cl-1"
        }
      },
      "command": [
        "sh",
        "-c",
        "echo '<html><body><h1>Hello, World!</h1></body></html>' > /usr/share/nginx/html/index.html && nginx -g 'daemon off;'"
      ]
    }
  ]
}

