{
    "family": "${TASK_FAMILY}",
    "executionRoleArn": "arn:aws:iam::<your AWS account ID>:role/<your ECS execution role name>",
    "networkMode": "awsvpc",
    "cpu": "256",
    "memory": "512",
    "requiresCompatibilities": ["FARGATE"],
    "containerDefinitions": [
        {
            "name": "html-td",
            "image": "nginx:latest",
            "portMappings": [
                {
                    "containerPort": 80,
                    "protocol": "tcp"
                }
            ],
            "essential": true,
            "logConfiguration": {
                "logDriver": "awslogs",
                "options": {
                    "awslogs-group": "/ecs/${TASK_FAMILY}",
                    "awslogs-region": "${AWS_DEFAULT_REGION}",
                    "awslogs-stream-prefix": "ecs"
                }
            },
            "command": [
                "/bin/sh",
                "-c",
                "echo '<html><body><h1>Hello, World!</h1></body></html>' > /usr/share/nginx/html/index.html && exec nginx -g 'daemon off;'"
            ]
        }
    ]
}
